doctype html
html
  head
    meta(charset='utf-8')

    // Scripts
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src=path+'signal-ui.min.js')
    script(src=path+'main.js')

    // Typekit
    script(src='//use.typekit.net/iax7vph.js')
    script try{Typekit.load();}catch(e){}

    link(rel='stylesheet' type='text/css' href=path+'lo-mein.css')
    link(rel='stylesheet' type='text/css' href=path+'main.css')

    block head

  body
    header
      h1
        a(href=path) LoMein

      a#forkme-banner(href='https://github.com/signal/lo-mein') View Source

    aside
      h5 Styles
      ul
        each component in components
          a(href=path+'#'+component.name.replace(/ /g, '-'))
            li #{component.name}

    article
      block content

      footer
